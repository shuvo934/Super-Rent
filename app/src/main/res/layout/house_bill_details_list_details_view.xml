<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/house_bill_details_card_layout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/back_color"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/house_bill_details_flat_renter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Shakil Ahmed Tanvir->1st-West-02"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/primary_variant_second"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/patua_one"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_betwn_hb_renter_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@color/dark_yellow"
                android:layout_above="@+id/house_bill_details_total_bill_amnt"/>
            <TextView
                android:id="@+id/house_bill_details_total_bill_amnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bill: 25000"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/house_bill_details_flat_renter_name"
                android:textStyle="bold"
                android:textColor="@color/primary_variant_second"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/patua_one"/>
            <TextView
                android:id="@+id/house_bill_details_bill_collect_amnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill to Collect: 25000"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/house_bill_details_total_bill_amnt"
                android:textStyle="bold"
                android:textColor="@color/primary_variant_second"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/patua_one"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>