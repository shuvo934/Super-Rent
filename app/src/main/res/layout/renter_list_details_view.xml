<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/delete_renter_button"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_renter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/primary_variant_second"
                    app:cardElevation="3dp">

                    <TextView
                        android:id="@+id/renter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_renter_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/delete_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:insetBottom="0dp"
                android:layout_marginStart="5dp"
                app:backgroundTint="@android:color/holo_red_dark"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Business/Company Name"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/primary_second"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text=":"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:textColor="@color/primary_second"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/flat_no_company_name"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Flat No/Company Name"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="National ID"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/national_id"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="112345678"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingStart="3dp"
                android:paddingEnd="2dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Contact"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/contact_no"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="01234567899"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Email"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email_no"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="farhad.cpi23@gmail.com"
                android:textStyle="bold"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Status"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/renter_status"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="IN-ACTIVE"
                android:textStyle="bold"/>

        </LinearLayout>


