<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/delete_property_button"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_property_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/primary_variant_second"
                    app:cardElevation="3dp">

                    <TextView
                        android:id="@+id/property_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="3dp"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_property_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/delete_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:layout_centerVertical="true"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:layout_alignParentEnd="true"
                android:insetBottom="0dp"
                android:layout_marginStart="5dp"
                app:backgroundTint="@android:color/holo_red_dark"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Property Address"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/primary_second"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text=":"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:textColor="@color/primary_second"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/property_address_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text=""
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Owner Name"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:gravity="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/property_owner_name"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textStyle="bold"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Owner Contact"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/property_owner_contact"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Status"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/property_active_status"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Notes"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=":"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/property_notes"
                android:layout_width="0dp"
                android:layout_weight="7.5"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text=""
                android:textStyle="bold"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/property_details_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/add_property_details"
                android:focusableInTouchMode="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_property_details"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:backgroundTint="@color/primary_variant_second"/>
        </RelativeLayout>

